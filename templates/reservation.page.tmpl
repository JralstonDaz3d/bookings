{{template "base" .}}

{{define "content"}}
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="text-uppercase section-heading">Make a Reservation</h2>
                    <h3 class="text-muted section-subheading">Getting your favorite {{index .StringMap "test"}} has never been easier! </h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4"><span class="fa-stack fa-4x"><i class="fa fa-circle fa-stack-2x text-primary"></i><i class="fa fa-home fa-stack-1x fa-inverse"></i></span>
                    <h4 class="section-heading">Cabins</h4>
                    <p class="text-muted">Select from charming single or multi room cabins in beautiful locals and settings that will inspire you.</p>
                </div>
                <div class="col-md-4"><span class="fa-stack fa-4x"><i class="fa fa-circle fa-stack-2x text-primary"></i><i class="fa fa-suitcase fa-stack-1x fa-inverse"></i></span>
                    <h4 class="section-heading">Rooms</h4>
                    <p class="text-muted">Select from a wide range of rooms in excellent locations that fit your budget and family-size.</p>
                </div>
                <div class="col-md-4"><span class="fa-stack fa-4x"><i class="fa fa-circle fa-stack-2x text-primary"></i><i class="fa fa-building fa-stack-1x fa-inverse"></i></span>
                    <h4 class="section-heading">Suites</h4>
                    <p class="text-muted">Select from top quality luxury suites at the best locations with excellent valet service.</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 mt-5">
                    <form id="contactForm" name="contactForm">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h3 class="mb-3">Occupant Information</h3>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3"><input class="form-control" type="text" id="name" placeholder="Your Name *" required=""><small class="form-text text-danger flex-grow-1 lead"></small></div>
                                <div class="form-group mb-3"><input class="form-control" type="email" id="email" placeholder="Your Email *" required=""><small class="form-text text-danger lead"></small></div>
                                <div class="form-group mb-3"><input class="form-control" type="tel" placeholder="Your Phone *" required=""><small class="form-text text-danger lead"></small></div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3"><textarea class="form-control" id="message" placeholder="Additional Accomodations" rows="6"></textarea><small class="form-text text-danger lead"></small></div>
                            </div>
                        </div>
                        <div class="row form-row" id="reservation-dates">
                            <div class="col-lg-12 text-center mt-5">
                                <h3 class="mb-3">Reservation Dates</h3>
                            </div>
                            <div class="col-md-6 text-end">
                                <input required class="form-control-lg" type="text" name="start" autocomplete="off" placeholder="Arrival Date*">
                            </div>
                            <div class="col-md-6">
                                <input required class="form-control-lg" type="text" name="end" autocomplete="off" placeholder="Departure Date*">
                            </div>
                            <div class="w-100"></div>
                            <div class="col-lg-12 text-center mt-5">
                                <div id="success-1"></div><button class="btn btn-primary btn-xl text-uppercase mt-3" id="sendMessageButton-1" type="submit">Make reservation</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{{end}}